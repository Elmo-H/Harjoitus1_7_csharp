<Page
    x:Class="Harjoitus1_7_csharp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Harjoitus1_7_csharp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel
        Orientation="Horizontal">

        <Border
            Width="150"
            Height="75"
            Background="Tomato"
            Margin="50">
            <Button
                Name="button1"
                FontSize="40"
                FontWeight="Bold"
                Width="150"
                Height="75"
                Foreground="Black"
                Click="button1_Click">
                Arvo
            </Button>
        </Border>

        <Border
            Name="box"
            Width="150"
            Height="75"
            Margin="50"
            Background="Black"
            BorderBrush="LightGray"
            BorderThickness="2">
            <TextBlock
                FontSize="40"
                FontWeight="Bold"
                Width="150"
                Height="75"
                Foreground="Black"
                Name="textBlock1">
            </TextBlock>
        </Border>

</Page>
